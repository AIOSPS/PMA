--------------------
CREATE TABLE `pms_warnings` (
  `war_id` varchar(15) NOT NULL COMMENT 'The ID of the warning is sequance generated by the system',
  `war_no` varchar(15) NOT NULL COMMENT 'The number come from the document issued by ICA ',
  `war_warned_name` varchar(100) NOT NULL COMMENT 'Name of the person/ organization wanred',
  `war_warned_id` varchar(15) NOT NULL COMMENT 'the warned person/ oranization',
  `com_id` varchar(15) NOT NULL COMMENT 'the name of the community where the warning provided',
  `don_id` varchar(15) NOT NULL COMMENT 'the donor of the MP',
  `war_latitude` decimal(18,14) NOT NULL COMMENT 'The coordinates of the structure the warning issued',
  `war_longitude` decimal(18,14) NOT NULL COMMENT 'The coordinates of the structure the warning issued',
  `war_type` varchar(2) NOT NULL COMMENT 'list of value ( Stop working, Demolition Order, confiscation order)',
  `war_struct_type` varchar(2) NOT NULL COMMENT 'List of value (Residential, Livestock barn, Commercial, Industrial, Agricultural) ',
  `war_issue_date` date NOT NULL COMMENT 'The date when the Israeli court decrees the decision',
  `war_submit_date` date NOT NULL COMMENT 'The date when the ICA, or IDF submit the warning letter to the owner of the structure/ property, or one of his relative, ',
  `war_receptionist_id` varchar(15) NOT NULL COMMENT 'The receptionist of the warning ID number',
  `war_receptionist_name` varchar(100) NOT NULL COMMENT 'the name of the person who received the warning and sign on it',
  `war_reception_date` date NOT NULL COMMENT 'the date of receiving the warning',
  `war_status` varchar(2) NOT NULL COMMENT 'List of value (Executed, In Process, on hold- Legal action, closed/ cancelled, ready for execution)',
  `war_notes` varchar(200) DEFAULT NULL,
  `username` varchar(15) NOT NULL,
  `time_stamp` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`war_id`),
  KEY `pms_war_donors_fk_idx` (`don_id`),
  KEY `pms_war_communities_fk_idx` (`com_id`),
  CONSTRAINT `pms_war_communities_fk` FOREIGN KEY (`com_id`) REFERENCES `pms_communities` (`com_id`) ON DELETE NO ACTION ON UPDATE NO ACTION,
  CONSTRAINT `pms_war_donors_fk` FOREIGN KEY (`don_id`) REFERENCES `pms_donors` (`don_id`) ON DELETE NO ACTION ON UPDATE NO ACTION
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
-----------------------
